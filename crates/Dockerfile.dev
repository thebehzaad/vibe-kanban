# Use Rust image with build tools (newer version to support cargo-watch)
FROM rust:1.88-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    build-essential \
    curl \
    git \
    clang \
    llvm-dev \
    libclang-dev \
    && rm -rf /var/lib/apt/lists/*

# Install cargo-watch for hot reload
RUN cargo install cargo-watch

# Set working directory
WORKDIR /app

# Copy Cargo files first for dependency caching
COPY Cargo.toml rust-toolchain.toml rustfmt.toml ./
COPY crates/server/Cargo.toml ./crates/server/
COPY crates/db/Cargo.toml ./crates/db/
COPY crates/executors/Cargo.toml ./crates/executors/
COPY crates/services/Cargo.toml ./crates/services/
COPY crates/utils/Cargo.toml ./crates/utils/
COPY crates/git/Cargo.toml ./crates/git/
COPY crates/local-deployment/Cargo.toml ./crates/local-deployment/
COPY crates/deployment/Cargo.toml ./crates/deployment/
COPY crates/review/Cargo.toml ./crates/review/

# Create dummy source files to build dependencies
RUN mkdir -p crates/server/src crates/db/src crates/executors/src \
    crates/services/src crates/utils/src crates/git/src \
    crates/local-deployment/src crates/deployment/src crates/review/src && \
    echo "fn main() {}" > crates/server/src/main.rs && \
    echo "fn main() {}" > crates/db/src/lib.rs && \
    echo "fn main() {}" > crates/executors/src/lib.rs && \
    echo "fn main() {}" > crates/services/src/lib.rs && \
    echo "fn main() {}" > crates/utils/src/lib.rs && \
    echo "fn main() {}" > crates/git/src/lib.rs && \
    echo "fn main() {}" > crates/local-deployment/src/lib.rs && \
    echo "fn main() {}" > crates/deployment/src/lib.rs && \
    echo "fn main() {}" > crates/review/src/lib.rs

# Build dependencies only (cached layer)
RUN cargo build --bin server 2>/dev/null || true

# Clean up dummy files
RUN rm -rf crates/*/src

# Copy the rest of the application
COPY . .

# Expose the backend port
EXPOSE 3001

# Set environment variables
ENV RUST_LOG=debug
ENV DISABLE_WORKTREE_CLEANUP=1

# Start the development server with hot reload
CMD ["cargo", "watch", "-w", "crates", "-x", "run --bin server"]
