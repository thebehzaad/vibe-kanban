{
  "name": "@runner/review",
  "version": "0.0.1",
  "private": true,
  "description": "PR review CLI tool - TypeScript translation of crates/review",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "runner-review": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@runner/utils": "workspace:*",
    "@runner/services": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
