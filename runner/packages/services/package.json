{
  "name": "@runner/services",
  "version": "0.0.1",
  "private": true,
  "description": "Business logic services - TypeScript translation of crates/services",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@runner/db": "workspace:*",
    "@runner/executors": "workspace:*",
    "@runner/git": "workspace:*",
    "@runner/utils": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
