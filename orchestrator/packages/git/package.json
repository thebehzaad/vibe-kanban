{
  "name": "@orchestrator/git",
  "version": "0.0.1",
  "private": true,
  "description": "Git operations and utilities - TypeScript translation of crates/git",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "test": "node --test"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^22.15.0"
  }
}
